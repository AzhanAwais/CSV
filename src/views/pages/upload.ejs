<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/headLinks'); %>
    <title>Document</title>
    <style>
        .upload-csv .card{
            -webkit-box-shadow: 0px 0px 12px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 0px 0px 12px 0px rgba(0,0,0,0.75);
            box-shadow: 0px 0px 12px 0px rgba(0,0,0,0.75);
        }

        .upload-csv .card h5{
            font-weight: 700;
        }

        .upload-csv .fa-file{
            font-size: 2.5rem;
        }

        .upload-csv .upload-card{
            -webkit-box-shadow: 0px 0px 12px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 0px 0px 12px 0px rgba(0,0,0,0.75);
            box-shadow: 0px 0px 12px 0px rgba(0,0,0,0.75);
        }

        .upload-csv .upload-card h5{
            font-size: 14px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <%- include('../partials/adminNavbar'); %>

    <section class="upload-csv py-5">
        <form action="../admin/uploadmanual" method="POST">
            <div class="container">
                <div class="row">
                    <div class="col-12 mb-3">
                        <% if (message != '') { %>
                            <% if (type === 'Success') { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <strong><%= message %></strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <%} else { %>
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <strong><%= message %></strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                          <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
                <div class="card p-4 upload-card">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-2 col-xl-1 mt-2">
                            <h5>Name</h5>
                        </div>
    
                        <div class="col-12 col-md-10 col-xl-11 mb-2">
                            <input  name="name" class="form-control w-100" placeholder="Enter the name" type="text" >
                         </div>

                         <div class="col-12 col-md-2 col-xl-1 mt-2">
                            <h5>Age</h5>
                        </div>
    
                        <div class="col-12 col-md-10 col-xl-11 mb-2">
                            <input name="age" class="form-control w-100" placeholder="Enter the age" type="text"  >
                        </div>

                        <div class="col-12 col-md-2 col-xl-1 mt-2">
                            <h5>Phone</h5>
                        </div>
    
                        <div class="col-12 col-md-10 col-xl-11 mb-2">
                            <input name="phone" class="form-control w-100" placeholder="Enter the phone" type="text" >
                        </div>

                        <div class="col-12 col-sm-6 mt-4">
                            <input type="submit" class="btn btn-success w-100"  value="Save" >
                        </div>
                    </div>
                 </div>
            </div>
        </form>
    </section>


    <section class="upload-csv">
        <form action="../admin/upload" enctype="multipart/form-data" method="POST">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-12 col-sm-6">
                        <div class="card p-4 justify-content-center align-items-center d-flex flex-column">
                            <i class="fa fa-file" aria-hidden="true"></i>
                            <h5 class="mt-3">UPLOAD CSV</h5>
                            <input class="w-100" type="file"  name="file">
                            <input class="w-100 btn btn-success mt-4" type="submit" value="Upload">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </section>


    <%- include('../partials/scriptLinks'); %>
</body>
</html>